<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="correia.felipe.cortana_app.Activity_Specie">

        <TextView
            android:id="@+id/tv_name_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Name: " />
        <TextView
            android:id="@+id/tv_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_specie"
            android:text="Classification: " />
        <TextView
            android:id="@+id/tv_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_classification"
            android:text="Designation: " />
        <TextView
            android:id="@+id/tv_average_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_designation"
            android:text="Average Height: " />
        <TextView
            android:id="@+id/tv_skin_colors_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_average_height"
            android:text="Skin Colors: " />
        <TextView
            android:id="@+id/tv_hair_colors_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_skin_colors_specie"
            android:text="Hair Colors: " />
        <TextView
            android:id="@+id/tv_eye_colors_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hair_colors_specie"
            android:text="Eye Colors: " />
        <TextView
            android:id="@+id/tv_average_lifespan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_eye_colors_specie"
            android:text="Average Lifespan: " />
        <TextView
            android:id="@+id/tv_homeworld_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_average_lifespan"
            android:text="Homeworld: " />
        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_homeworld_specie"
            android:text="Language: " />

        <TextView
            android:id="@+id/tv_people_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_language"
            android:text="People: " />
        <ListView
            android:id="@+id/lv_people_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_people_specie">
        </ListView>

        <TextView
            android:id="@+id/tv_films_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_people_specie"
            android:text="Films: " />
        <ListView
            android:id="@+id/lv_films_specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_films_specie">
        </ListView>


    </RelativeLayout>
</ScrollView>
