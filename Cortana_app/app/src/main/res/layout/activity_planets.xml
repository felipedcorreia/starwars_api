<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="correia.felipe.cortana_app.Activity_Planets">

        <TextView
            android:id="@+id/tv_name_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Name: " />
        <TextView
            android:id="@+id/tv_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_planet"
            android:text="Rotation Period: " />
        <TextView
            android:id="@+id/tv_orbital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rotation"
            android:text="Orbital Period: " />
        <TextView
            android:id="@+id/tv_diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_orbital"
            android:text="Diameter: " />
        <TextView
            android:id="@+id/tv_climate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_diameter"
            android:text="Climate: " />
        <TextView
            android:id="@+id/tv_gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_climate"
            android:text="Gravity: " />
        <TextView
            android:id="@+id/tv_terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gravity"
            android:text="Terrain: " />
        <TextView
            android:id="@+id/tv_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_terrain"
            android:text="Surface Water: " />
        <TextView
            android:id="@+id/tv_population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_surface"
            android:text="Population: " />

        <TextView
            android:id="@+id/tv_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_population"
            android:text="Residents: " />
        <ListView
            android:id="@+id/lv_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_residents">
        </ListView>

        <TextView
            android:id="@+id/tv_films_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_residents"
            android:text="Films: " />
        <ListView
            android:id="@+id/lv_films_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_films_planet">
        </ListView>

    </RelativeLayout>
</ScrollView>
