<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="correia.felipe.cortana_app.Activity_Film">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Title: " />
    <TextView
        android:id="@+id/tv_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:text="Episode: " />
    <TextView
        android:id="@+id/tv_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_episode"
        android:text="Director: " />
    <TextView
        android:id="@+id/tv_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_director"
        android:text="Producer: " />
    <TextView
        android:id="@+id/tv_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_producer"
        android:text="Release Date: " />

    <TextView
        android:id="@+id/tv_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release"
        android:text="Characters: " />
    <ListView
        android:id="@+id/lv_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_characters">
    </ListView>

    <TextView
        android:id="@+id/tv_planets_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_characters"
        android:text="Planets: " />
    <ListView
        android:id="@+id/lv_planets_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_planets_films">
    </ListView>

    <TextView
        android:id="@+id/tv_starships_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_planets_films"
        android:text="Starships: " />
    <ListView
        android:id="@+id/lv_starships_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_starships_films">
    </ListView>

    <TextView
        android:id="@+id/tv_vehicles_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_starships_films"
        android:text="Vehicles: " />
    <ListView
        android:id="@+id/lv_vehicles_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vehicles_films">
    </ListView>

    <TextView
        android:id="@+id/tv_species_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_vehicles_films"
        android:text="Species: " />
    <ListView
        android:id="@+id/lv_species_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_species_films">
    </ListView>

</RelativeLayout>
</ScrollView>